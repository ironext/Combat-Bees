.tab-view{
    flex-direction: column;
    margin-left: 0;
    margin-right: 0;
    flex-shrink: 0;
}

.tab-view__tab-header
{
    flex-direction: row;
    padding-left: 11px;
    flex-wrap: wrap;
    padding-top: 1px;
    margin-bottom: 5px;
    height:20px;
    flex-grow: 1;
}

.tab-view__tab-content
{
    flex-grow: 1;
}

.tab-view__tab--active
{
    border-bottom-width: 2px;
}

.tab-view__tab
{
    margin-right: 10px;
}
